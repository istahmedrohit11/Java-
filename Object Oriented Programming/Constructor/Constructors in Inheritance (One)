class Base{
    Base(){
        System.out.println("Base Constructor");
    }

class Derived extends Base{
    Derived(){
        System.out.println("Derived Constructor");
    }
    }
}
public class Hello{
    public static void main(String[] args){
        //Creating an object for base class
        Base b=new Base();
        Derived d= new Derived();
        // Output:
        // Base Constructor 
        // Base Constructor
        // Derived Constructor
    }
}
