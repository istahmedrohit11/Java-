
import java.io.FileWriter;
import java.io.IOException;
public class WriteToFile{

    public static void main(String[] args){
        try{
            FileWriter Writer = new FileWriter("Rohit.txt",true);
            // The second parameter is true, which means append mode
            // If you want to overwrite the file, set it to false or remove it
            // Writer = new FileWriter("Rohit.txt", false);
            // Writer = new FileWriter("Rohit.txt"); // This will also overwrite the file

            Writer.write("Files in Java might be tricky\n");
            Writer.write("Files in Java might not be tricky\n ");
            Writer.close();
            System.out.println("Successfully wrote to the file.");

        }catch (IOException e){
            System.out.println("An error occurred.");
            e.printStackTrace();
        }
    }
}
