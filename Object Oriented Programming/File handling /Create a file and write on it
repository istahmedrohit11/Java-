import java.io.File;
import java.io.IOException;
public class helloworld{
   public static void main(String[] args){
       // This is create a file named "Rohit.txt" in the current directory.
      File myFile =new File("Rohit.txt"); 
      try{
       myFile.createNewFile();
      }catch(IOException e){
       e.printStackTrace();
       System.out.println("File already exists or cannot be created.");
      }
       System.out.println("File created successfully.");

       //code to write in the file
       //if file already exists, it will overwrite the content.
       //if file does not exist, it will create a new file and write the content in it.
       try (java.io.FileWriter writer = new java.io.FileWriter(myFile)) {
           writer.write("Hello, World!");
           System.out.println("Data written to file successfully.");
       } catch (IOException e) {
           e.printStackTrace();
           System.out.println("Error writing to file.");
       }
   }
}
